<div class="container mt-5">
  <h1>
    <%= @article.title %>
      <%= link_to edit_article_path(@article), class: "btn" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= link_to article_path(@article), data: { turbo_method: 'delete', turbo_confirm: "Delete #{@article.title}?" }, class: 'btn' do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
  </h1>
  <p><%= @article.content %></p>

</div>
